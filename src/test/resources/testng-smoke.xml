<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="API Automation Framework" verbose="1" parallel="false">
    <!-- SMOKE SUITE -->
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="Smoke"/>
                <exclude name="Negative"/>
            </run>
        </groups>

        <packages>
            <package name="tests.*"/>
        </packages>
    </test>
</suite>
